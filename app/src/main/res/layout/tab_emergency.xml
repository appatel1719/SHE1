<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyTab">

    <ir.sohreco.circularpulsingbutton.CircularPulsingButton
        android:id="@+id/btn_Track_emergency"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_marginEnd="50dp"
        android:layout_marginBottom="184dp"
        app:cpb_animationDuration="300"
        app:cpb_color="@color/track_color"
        app:cpb_text="Track"
        app:cpb_textColor="@color/text_color"
        app:cpb_zoomInScale="1.3"
        app:cpb_zoomOutScale="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toEndOf="@+id/btn_alert_emergency">

    </ir.sohreco.circularpulsingbutton.CircularPulsingButton>

    <ir.sohreco.circularpulsingbutton.CircularPulsingButton
        android:id="@+id/btn_find_police"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="184dp"
        app:cpb_animationDuration="300"
        app:cpb_color="@color/find_color"
        app:cpb_text="Find"
        app:cpb_textColor="@color/text_color"
        app:cpb_zoomInScale="1.3"
        app:cpb_zoomOutScale="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ir.sohreco.circularpulsingbutton.CircularPulsingButton
        android:id="@+id/btn_alert_emergency"
        android:layout_width="332dp"
        android:layout_height="332dp"

        android:layout_marginTop="16dp"
        app:cpb_animationDuration="300"
        app:cpb_color="@color/alert_color"
        app:cpb_text="Alert"
        app:cpb_textColor="@color/text_color"
        app:cpb_zoomInScale="1.3"
        app:cpb_zoomOutScale="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187">

    </ir.sohreco.circularpulsingbutton.CircularPulsingButton>

</android.support.constraint.ConstraintLayout>