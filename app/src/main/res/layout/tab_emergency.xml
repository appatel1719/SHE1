<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyTab">

    <ir.sohreco.circularpulsingbutton.CircularPulsingButton
        android:id="@+id/btn_alert_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cpb_animationDuration="300"
        app:cpb_color="@color/alert_color"
        app:cpb_text="Alert"
        app:cpb_textColor="@color/text_color"
        app:cpb_zoomInScale="1.7"
        app:cpb_zoomOutScale="0.7" />


</android.support.constraint.ConstraintLayout>